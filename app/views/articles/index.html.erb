<% @articles.each do |article| %>
  <div class="card border-secondary mb-3">
    <div class="card-header">
      <%= article.title %><br/>
      <small>
        <%= article.created_at.strftime("Created At: " '%-H:%-M:%-S %-b %-d, %Y') %>
      </small>
    </div>
    <div class="card-body">
      <p class="card-text"><%= article.text %></p>
      <p class="card-text">
        <%= link_to 'Show', article_path(article), class: "btn btn-dark" %>
        <% if user_signed_in?%>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-dark"  %>
          <%= link_to 'Delete', article_path(article),
                                class: "btn btn-dark",
                                method: :delete %>
      <% end %>
      </p>
    </div>
  </div>
  <hr />
<% end %>
