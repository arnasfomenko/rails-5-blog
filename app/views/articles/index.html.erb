<table>
  <tr>
    <th style="padding:10px;width:20%;">Title</th>
    <th style="padding:10px;">Text</th>
  </tr>
    <% @articles.each do |article| %>
    <tr>
        <td style="padding:10px;"><%= article.title %></td>
        <td style="padding:10px;"><%= article.text %></td>
    </tr>
    <tr>
        <td></td>
        <td style="padding:10px;" align="center"><%= link_to 'Show', article_path(article) , class: "btn btn-info" %>
            <% if user_signed_in? == true %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning"  %>
            <%= link_to 'Destroy', article_path(article),
                                                                    class: "btn btn-danger",
                                                                    method: :delete,
                                                                    data: { confirm: 'Are you sure?' } %>
       </td>
       <% end %>
    </tr>
    <% end %>
</table>
