<div style="padding:10px;">
<h1>Listing articles</h1>

<%= link_to 'New article', new_article_path, class: "btn btn-success" %>
</div>
<table>
  <tr>
    <th style="padding:10px;border:1px solid #2e2e2e;">Title</th>
    <th style="padding:10px;border:1px solid #2e2e2e;">Text</th>
    <th style="padding:10px;" colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
        <td style="padding:10px;border:1px solid #2e2e2e;"><%= article.title %></td>
        <td style="padding:10px;border:1px solid #2e2e2e;"><%= article.text %></td>
    </tr>
    <tr>
        <td style="padding:10px;"><%= link_to 'Show', article_path(article) , class: "btn btn-info" %></td>
        <td style="padding:10px;"><%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning"  %></td>
        <% if user_signed_in? == true %>
            <td style="padding:10px;"><%= link_to 'Destroy', article_path(article),
                                                                class: "btn btn-danger",
                                                                method: :delete,
                                                                data: { confirm: 'Are you sure?' } %></td>
       <% end %>
    </tr>
<% end %>
</table>
