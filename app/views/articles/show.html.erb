<div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:10px;"><h3><%= @article.title %></h3></div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-12" style="font-size:12px;"><p><%= @article.created_at %></p></div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-12" style="font-size:14px;"><p><%= @article.text %></p></div>
</div>
<% if user_signed_in? == true %>
<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-info" %>
<% end %>
<hr>
<%= render @article.comments %>

<h5>Add a comment:</h5>
<%= render 'comments/form' %>
<%= link_to 'Back', articles_path %>

<div id="comments"></div>
