<div class="alert alert-info">
    <p>
      <strong>Title:</strong>
      <%= @article.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @article.text %>
    </p>
</div>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
<% if user_signed_in? == true %>
    <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>
